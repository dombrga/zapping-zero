---
const { platform, username } = Astro.props
const url = platform === 'frontendmentor' ?
              `https://www.${platform}.io/profile/${username}` : `https://www.${platform}.com/${username}`
---
<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>

<a href={url}>{platform}</a>